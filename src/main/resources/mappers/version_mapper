<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="version_mapper">
    <select id="getByHashCode" resultMap="version_map">
        SELECT *
        FROM versions
        LEFT JOIN versions_files
        ON versions_files.versionHashCode = hashCode
        LEFT JOIN files
        ON versions_files.fileId = files.Id
        WHERE HashCode=#{HashCode}
    </select>
    <select id="get" resultMap="version_map">
        SELECT *
        FROM versions
        LEFT JOIN versions_files
        ON versions_files.versionHashCode = hashCode
        LEFT JOIN files
        ON versions_files.fileId = files.Id
    </select>
    <delete id="deleteByHashCode">
        DELETE FROM version
        WHERE hashCode=#{hashCode}
    </delete>
    <insert id="create">
        INSERT INTO version(hashCode)
        VALUES (#{hashCode})
    </insert>
    <update id="update">
        UPDATE version
        SET hashCode=#{hashCode}
        WHERE hashCode=#{hashCode}
    </update>

    <resultMap id="file_map"
               type= "com.automation.lab.fall.kapinusFilimonov.core22.domain.Version"
               autoMapping="false">
        <id property="hashCode" column="hashCode"/>
    </resultMap>
</mapper>